{
  "name": "react-with-electron",
  "version": "0.1.0",
  "description": "A desktop application using React and Electron.",
  "author": "Saloni Panwar",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/material": "^6.1.1",
    "@mui/styles": "^6.1.1",
    "@mui/system": "^6.1.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron-updater": "^6.3.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.26.2",
    "react-scripts": "5.0.1",
    "wait-on": "^8.0.1",
    "web-vitals": "^2.1.4"

  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-react": "react-scripts build",
    "build-electron": "electron-builder",
    "electron:start": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "electron-builder",
    "electron": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package": "npm run build && npm run dist",
    "publish": "npm run build-react && npm run build-electron"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^32.0.2",
    "electron-builder": "^25.0.0",
    "react-scripts": "5.0.1"
  },
  "repository": "https://github.com/saloni-080601/offline-wesite",
  "publish": {
    "provider": "github",
    "email": "salonipanwar532@gmail.com",
    "url": "https://github.com/saloni-080601",
    "owner": "saloni-080601",
    "repo": "offline-wesite"
  },
  "build": {
    "appId": "com.navgurukul.thesama",
    "productName": "sama-learning-app",
    "files": [
      "build/**/*",
      "public/electron.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "path/to/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "path/to/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "path/to/icon.png"
    }
  }
}